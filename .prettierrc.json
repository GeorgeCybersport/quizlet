{
  "trailingComma": "all",
  "arrowParens": "avoid",
  "semi": true,
  "tabWidth": 2,
  "bracketSpacing": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "singleQuote": true
      }
    },
    {
      "files": ["*.jsx"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
